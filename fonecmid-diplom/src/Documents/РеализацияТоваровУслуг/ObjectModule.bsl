Процедура ВКМ_ВыполнитьАвтозаполнение() Экспорт

	АбонентскаяПлатаПоДоговору = Константы.ВКМ_НоменклатураАбонентскаяПлата.Получить();
	ВыполненныеРаботыПоДоговору = Константы.ВКМ_НоменклатураВыполненныеРаботы.Получить();	
	ЗаполнятьАбонентскуюПлату = Ложь;
	ЗаполнятьВыполненныеРаботы = Ложь;
		
	Если ЗначениеЗаполнено(АбонентскаяПлатаПоДоговору) И ЗначениеЗаполнено(ВыполненныеРаботыПоДоговору) Тогда
		
		Запрос = Новый Запрос;
		
		Запрос.Текст = "ВЫБРАТЬ
		|	ДоговорыКонтрагентов.ВКМ_РазмерАбоненсткойПлаты КАК РазмерАбоненсткойПлаты
		|ИЗ
		|	Справочник.ДоговорыКонтрагентов КАК ДоговорыКонтрагентов
		|ГДЕ
		|	ДоговорыКонтрагентов.Ссылка = &Договор";
		
		Запрос.УстановитьПараметр("Договор", Договор);
		ТЗПараметрыДоговора = Запрос.Выполнить().Выгрузить();
		АбонентскаяПлатаПоДоговору = ТЗПараметрыДоговора.ВыгрузитьКолонку("РазмерАбоненсткойПлаты")[0];
		
		Если АбонентскаяПлатаПоДоговору > 0 Тогда
			
			ЗаполнятьАбонентскуюПлату = Истина;

		КонецЕсли;
		
		Запрос.Текст = "ВЫБРАТЬ
		|	ВКМ_ВыполненныеКлиентуРаботы.КоличествоЧасов КАК КоличествоЧасов,
		|	ВКМ_ВыполненныеКлиентуРаботы.СуммаКОплате КАК СуммаКОплате,
		|	ВКМ_ВыполненныеКлиентуРаботы.Договор КАК Договор
		|ИЗ
		|	РегистрСведений.ВКМ_ВыполненныеКлиентуРаботы КАК ВКМ_ВыполненныеКлиентуРаботы
		|ГДЕ
		|	ВКМ_ВыполненныеКлиентуРаботы.Клиент = &Клиент
		|	И ВКМ_ВыполненныеКлиентуРаботы.Период <= &КонецМесяца
		|	И ВКМ_ВыполненныеКлиентуРаботы.Период >= &НачалоМесяца
		|ИТОГИ
		|	СУММА(СуммаКОплате),
		|	СУММА(КоличествоЧасов)
		|ПО
		|	Договор";
		
		Запрос.УстановитьПараметр("Договор", Договор);
		Запрос.УстановитьПараметр("Клиент", Контрагент);
		Запрос.УстановитьПараметр("НачалоМесяца", НачалоМесяца(Дата));
		Запрос.УстановитьПараметр("КонецМесяца", КонецМесяца(Дата));
		
		ТЗВыполненныеРаботы = Запрос.Выполнить().Выгрузить();
		
		Если ТЗВыполненныеРаботы.Количество() > 0 Тогда
		
			ЗаполнятьВыполненныеРаботы = Истина;
			СуммаПоВыполненнымРаботам = ТЗВыполненныеРаботы.ВыгрузитьКолонку("СуммаКОплате")[0];
			СуммаЧасов = ТЗВыполненныеРаботы.ВыгрузитьКолонку("КоличествоЧасов")[0];
			
		КонецЕсли;
		
		Если 
		
		ЗаполнятьАбонентскуюПлату = Истина 
		ИЛИ ЗаполнятьВыполненныеРаботы = Истина 
		
		Тогда
			
		ЭтотОбъект.Услуги.Очистить();
		ЗаполнитьСтрокиТЧ(АбонентскаяПлатаПоДоговору, СуммаПоВыполненнымРаботам, ЗаполнятьВыполненныеРаботы, СуммаЧасов);
		
		Иначе 
			
			ОбщегоНазначения.СообщитьПользователю("Данные для заполнения отсутствуют");
		
		КонецЕсли;
					
	Иначе
		
		ОбщегоНазначения.СообщитьПользователю("Не заданы значения констант. Обратитесь к администратору системы.");
			
	КонецЕсли;
	
	
КонецПроцедуры

Процедура ЗаполнитьСтрокиТЧ(АбонентскаяПлатаПоДоговору, СуммаПоВыполненнымРаботам, ЗаполнятьВыполненныеРаботы, СуммаЧасов)

	СтрокаАбонентскаяПлата = ЭтотОбъект.Услуги.Добавить();
	СтрокаАбонентскаяПлата.Номенклатура = Константы.ВКМ_НоменклатураАбонентскаяПлата.Получить();
	СтрокаАбонентскаяПлата.Количество = 1;
	СтрокаАбонентскаяПлата.Цена = АбонентскаяПлатаПоДоговору;
	СтрокаАбонентскаяПлата.Сумма = СтрокаАбонентскаяПлата.Цена * СтрокаАбонентскаяПлата.Количество;

	Если ЗаполнятьВыполненныеРаботы = Истина Тогда
	
	СтрокаВыполненныеРаботы = ЭтотОбъект.Услуги.Добавить();
	СтрокаВыполненныеРаботы.Номенклатура = Константы.ВКМ_НоменклатураВыполненныеРаботы.Получить();
	СтрокаВыполненныеРаботы.Количество = СуммаЧасов;
	СтрокаВыполненныеРаботы.Сумма = СуммаПоВыполненнымРаботам;
	СтрокаВыполненныеРаботы.Цена = СуммаПоВыполненнымРаботам/СуммаЧасов;
		
	КонецЕсли;
	
	ЭтотОбъект.Записать();
	
	ОбщегоНазначения.СообщитьПользователю(СтрШаблон("Таблица услуг в документе %1 успешно заполнена.",ЭтотОбъект.Номер));	
		
КонецПроцедуры;

