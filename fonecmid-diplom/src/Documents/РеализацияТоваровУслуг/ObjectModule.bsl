	//++ВКМ_Дроздков_03.07.24
	
	Если  ТипЗнч(ДанныеЗаполнения) = Тип("СправочникСсылка.ДоговорыКонтрагентов") Тогда
		ЗаполнитьНаОснованииДоговораКонтрагента(ДанныеЗаполнения);	
	КонецЕсли;
	
	//--
		
КонецПроцедуры

